<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="pet_name">Name:</label>
  <input type="text" id="pet_name" name="pet[name]">
  <p>Choose an existing owner:</p>
  <% Owner.all.each do |o| %>
    <input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>"
    <%= 'checked' if @pet.owner == o %>>
    <label for="<%= o.id %>"><%= o.name %></label>
  <% end %>
  <p>Or, create a new owner:</p>
  <label for="owner_name">Name:</label>
  <input type="text" id="owner_name" name="owner[name]">
  <br><br>
  <input type="submit" value="Update Pet">
</form>
