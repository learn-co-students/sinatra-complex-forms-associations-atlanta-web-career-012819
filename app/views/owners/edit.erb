<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="owner_name">Name:</label>
  <input type="text" name="owner[name]" id="owner_name" value="<%= @owner.name %>">

  <br>

  <p>Choose an existing pet:</p>
  <% @pets.each do |p| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= p.id %>" value="<%= p.id %>"
    <%= 'checked' if @owner.pets.include?(p) %> >
      <%= p.name %>
    </input>
  <% end %>
  <br>

  <p>And/or, create a new pet:</p>
  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  <br><br>
  <input type="submit" value="Update Owner">
</form>
